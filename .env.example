# FA-MVP 環境變數配置

# Google AI API 設定
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Firebase 配置（用於用戶認證和資料儲存）
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Next.js 環境設定
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_VERSION=0.1.0

# 語音AI設定
NEXT_PUBLIC_VOICE_SAMPLE_RATE=16000
NEXT_PUBLIC_VOICE_LANGUAGE=zh-TW

# 開發模式設定
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_STABILITY_TEST_ENABLED=true

# Vercel部署設定（生產環境）
# VERCEL_URL=your_production_domain
# NEXTAUTH_URL=https://your_production_domain

# 測試設定
TEST_API_TIMEOUT=10000
TEST_CONNECTION_RETRIES=3